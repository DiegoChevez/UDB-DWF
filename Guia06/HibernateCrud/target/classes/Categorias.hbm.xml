<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="sv.edu.udb.hibernatecrud.Categorias" table="categorias">

        <id name="categoria_id" column="categoria_id">
            <generator class="native"/>
        </id>
        <property name="categoria" column="categoria"/>
        <property name="descripcion_categoria" column="descripcion_categoria"/>
        <property name="estado_categoria" column="estado_categoria"/>

    </class>
</hibernate-mapping>
