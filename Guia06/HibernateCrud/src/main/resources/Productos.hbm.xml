<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="sv.edu.udb.hibernatecrud.Productos" table="productos">

        <id name="producto_id" column="producto_id">
            <generator class="native"/>
        </id>
        <property name="categoria_id" column="categoria_id" insert="false"
                  update="false"/> <!-- AquÃ­ se establecen insertable y updatable en false -->
        <property name="producto" column="producto"/>
        <property name="descripcion_producto" column="descripcion_producto"/>
        <property name="estado_producto" column="estado_producto"/>

        <many-to-one name="categoria" class="sv.edu.udb.hibernatecrud.Categorias" fetch="select">
            <column name="categoria_id" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>
